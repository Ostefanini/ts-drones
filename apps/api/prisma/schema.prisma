generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"

  runtime                = "nodejs"
  moduleFormat           = "esm"
  generatedFileExtension = "js"
  importFileExtension    = "js"
}

datasource db {
  provider = "postgresql"
}

enum AssetType {
  TWO_D
  THREE_D
  SCRIPT
}

enum AssetName {
  TRIANGLE
  SQUARE
  CIRCLE
  CROSS
}

enum Sound {
  NONE
  EMERVEILLE
  HEALING
  GLOSSY
}

model User {
  id           String        @id @default(uuid())
  nickname     String        @unique
  combinations Combination[]
}

model Asset {
  id          String    @id @default(uuid())
  name        AssetName
  thumbnail   String    @default(uuid())
  video       String?
  description String
  type        AssetType
  durationSec Int?
  nbUav       Int?
  createdAt   DateTime  @default(now())
  tags        String[]
}

// Unique combination of assets found by a user, not related to actual assets
model Combination {
  id         String     @id @default(uuid())
  assetOne   AssetName
  assetTwo   AssetName?
  assetThree AssetName?
  assetFour  AssetName?
  foundAt    DateTime   @default(now())
  foundBy    User       @relation(fields: [foundById], references: [id])
  foundById  String
  sound      Sound      @default(NONE)

  @@unique([assetOne, assetTwo, assetThree, assetFour, sound, foundById])
}
